{{> "account/header"}}

<div class="d-flex justify-content-center   ">
  <div class=" col-md-6 m-3">
    {{#if result}}
    <div class="alert alert-{{ternaryIf success 'success' 'danger'}} " role="alert">
      {{result}}
    </div>
    {{/if}}

    <form class="bg-white border p-3 " method="POST" action="/reset-password">

      <div class="form-group p-1 pt-3">
        <h3> {{ translate "account_page.reset_password.form.header.title"}} </h3>
        <hr class="pb-2" />
        <label for="email"> {{ translate "account_page.reset_password.form.email.label"}}</label>
        <input name="email" type="text" class="form-control" id="email" aria-describedby="emailHelp"
          {{ternaryIf myErrors.email "is-invalid" "" }} value="{{form.influencer.subscriber.email}}"
          autocomplete="email">
        {{#if myErrors.email}}
        <small id="emailHelp" class="form-text text-danger">{{myErrors.email }} </small>
        {{/if}}
      </div>
