    // ***************************** Nav scrolling ***************
    $("#navbarNav ul li a[href^='#']").on('click', function (e) {

      e.preventDefault();
      let url = $('body').find($(this).attr('href')).offset().top;
      $(this).parent().height()
      $('html, body').animate({
        scrollTop: url - $("#navbarNav").parent().height()
      }, 300);
      $(this).parent().addClass('active');
      $(this).parent().siblings().removeClass('active');

