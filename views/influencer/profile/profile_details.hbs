<div class="form-group">
    <label for="first_name">{{ translate "dashboard.profile.tabs.profile.form.first_name.libelle" }}</label>
    <input name="first_name" value="{{influencer_form.subscriber.first_name}}"
        class="{{ternaryIf myErrors.first_name 'is-invalid' ''}} form-control" id="first_name" type="text"
        autocomplete="given-name" aria-describedby="urlHelp">
    {{#if myErrors.first_name }}
    <small id="first_nameHelp" class="form-text text-danger">{{ myErrors.first_name }}</small>
    {{/if}}
</div>
<div class="form-group">
    <label for="last_name">{{ translate "dashboard.profile.tabs.profile.form.last_name.libelle" }}</label>
    <input name="last_name" value="{{influencer_form.last_name}}"
        class="{{ternaryIf myErrors.last_name 'is-invalid' ''}} form-control" type="text" id="last_name"
        autocomplete="family-name" aria-describedby="last_nameHelp">
    {{#if myErrors.last_name }}
    <small id="last_nameHelp" class="form-text text-danger">{{ myErrors.last_name }}</small>
    {{/if}}
</div>
<div class="form-group">
    <label for="login">{{ translate "dashboard.profile.tabs.profile.form.login.libelle" }}</label>
    <input name="login" value="{{influencer_form.login}}"
        class="{{ternaryIf myErrors.login 'is-invalid' ''}} form-control" type="text" id="login"
        autocomplete="username" aria-describedby="loginHelp">
    {{#if myErrors.login }}
    <small id="loginHelp" class="form-text text-danger">{{ myErrors.login }}</small>
    {{/if}}
</div>
<div class="form-group">
    <label for="nicheSelect">{{ translate "dashboard.profile.tabs.profile.form.niche.libelle"}}</label>
    <select name="niche" class="custom-select {{ternaryIf myErrors.niche 'is-invalid' ''}}" id='nicheSelect'
        autocomplete='off'>
        <option value=""></option>
        {{#each niches }}
        <option value="{{@key}}" {{ternaryIf (iff ../influencer_form.niche '==' @key) 'selected' ''}}> {{ translate this }}
        </option>
        {{/each}}
    </select>
    {{#if myErrors.niche}}
    <small class="form-text text-danger"> {{myErrors.niche}} </small>
    {{/if}}
</div>
<div class="form-group">
  <label>{{ translate "dashboard.profile.tabs.profile.form.character.libelle"}}</label>
    <div class="custom-control custom-radio">
    <input type="radio" id="radioPerson" name="character" class="custom-control-input"
    value="person"
    {{ ternaryIf (iff influencer.character '==' 'person') 'checked' ''}}>
    <label class="custom-control-label" for="radioPerson">{{ translate characters.person}}</label>
    </div>
    <div class="custom-control custom-radio">
    <input type="radio" id="radioGroup" name="character" class="custom-control-input"
    value="group"
    {{ ternaryIf (iff influencer.character '==' "group") 'checked' ''}}>
    <label class="custom-control-label" for="radioGroup">{{ translate characters.group}}</label>
    </div>
    {{#if myErrors.character }}
    <small class="form-text text-danger">{{ myErrors.character }}</small>
    {{/if}}

</div>
<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit"
            class="btn btn-primary">{{ translate "dashboard.profile.tabs.profile.form.submit" }}</button>
    </div>
</div>